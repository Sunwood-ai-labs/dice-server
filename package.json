{
  "name": "@makimaki/dice-server",
  "version": "0.1.0",
  "description": "サイコロを振るためのMCPサーバー",
  "type": "module",
  "bin": {
    "dice-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "dice",
    "random"
  ],
  "author": "makimaki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makimaki/dice-server.git"
  },
  "bugs": {
    "url": "https://github.com/makimaki/dice-server/issues"
  },
  "homepage": "https://github.com/makimaki/dice-server#readme",
  "publishConfig": {
    "access": "public"
  }
}
